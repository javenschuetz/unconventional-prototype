        <Button FontSize="20" Content="Channel 1" HorizontalAlignment="Left" Margin="10,123,0,0" VerticalAlignment="Top" Width="146" Height="46"/>
        <Button FontSize="20" Content="Channel 2" HorizontalAlignment="Left" Margin="10,174,0,0" VerticalAlignment="Top" Width="146" Height="46"/>
        <Button FontSize="20" Content="Channel 3" HorizontalAlignment="Left" Margin="10,225,0,0" VerticalAlignment="Top" Width="146" Height="46"/>
        <Button FontSize="20" Content="Contact Us" HorizontalAlignment="Left" Margin="10,276,0,0" VerticalAlignment="Top" Width="146" Height="46"/>
